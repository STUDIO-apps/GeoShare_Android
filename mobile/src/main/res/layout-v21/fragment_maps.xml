<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".maps.MapsFragment">

        <fragment
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/maps_coordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:fitsSystemWindows="true">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="start|center_vertical"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/search_key_line"
                            android:paddingLeft="@dimen/search_key_line"
                            android:paddingRight="@dimen/search_key_line"
                            android:paddingStart="@dimen/search_key_line">

                            <ImageView
                                android:id="@+id/drawer_open"
                                android:contentDescription="@string/menu_desc"
                                android:layout_width="@dimen/search_icon"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_menu_black_48px" />

                            <EditText
                                android:id="@+id/places_autocomplete"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/search_key_line"
                                android:paddingRight="@dimen/search_key_line"
                                android:background="@android:color/transparent"
                                android:layout_gravity="start|center_vertical"
                                android:layout_weight="1"
                                android:hint="@string/search"
                                android:ems="10"
                                android:gravity="start|center_vertical"
                                android:textSize="@dimen/search_text_medium">
                            </EditText>

                            <ImageView
                                android:id="@+id/friend_drawer"
                                android:contentDescription="@string/menu_desc"
                                android:layout_width="@dimen/search_icon"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_people_outline_black_48px" />

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/searchItems"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_sheet"
                android:minHeight="120dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                app:behavior_peekHeight="120dp"
                android:elevation="4dp"
                app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_text"/>

            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
